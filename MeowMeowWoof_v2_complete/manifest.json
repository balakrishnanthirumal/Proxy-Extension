
{
    "manifest_version": 3,
    "name": "MeowMeowWoof",
    "version": "2.0",
    "description": "Bookmark specific timestamps in YouTube videos with comments.",
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "host_permissions": [
        "https://www.youtube.com/*"
    ]
}
